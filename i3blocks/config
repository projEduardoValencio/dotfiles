# Memory usage
[memory]
command= ~/.config/i3blocks/memory/memory
label=MEM 
separator=true
interval=30

# CPU usage
[cpu_usage]
command= ~/.config/i3blocks/cpu_usage/cpu_usage
label=CPU 
interval=10
align=center
min_width=CPU 100.00%
separator=true

# Battery indicator
[battery]
command= ~/.config/i3blocks/battery/battery
label=BAT 
#label=⚡
interval=30

# Date Time
#
[time]
#command=date '+%Y-%m-%d %H:%M:%S'
command=date '+%d-%m-%Y %H:%M '
interval=5

